<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="jpa.sample">
	    <provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.learn.assessment.domain.Assessment</class>
 		<class>com.learn.assessment.domain.Question</class>
 		<class>com.learn.assessment.domain.Choice</class>
 		<class>com.learn.assessment.domain.Answer</class>
 		<class>com.learn.assessment.domain.Result</class>
	</persistence-unit>

</persistence>
